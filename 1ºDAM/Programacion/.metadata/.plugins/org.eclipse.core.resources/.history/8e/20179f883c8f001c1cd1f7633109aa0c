import java.util.ArrayList;
import java.util.Scanner;

public class Agencia {
	ArrayList<Piso> pisos = new ArrayList<Piso>();
	String nombre;
	public Scanner scan = new Scanner(System.in);

	public Agencia() {
		this.nombre = "";
	}

	public Agencia(String nombre) {
		this.nombre = nombre;
	}

	public Agencia(String nombre, ArrayList<Piso> pisos) {
		this.nombre = nombre;
		this.pisos = pisos;
	}

	public ArrayList<Piso> getPisos() {
		return pisos;
	}

	public void setPisos(ArrayList<Piso> pisos) {
		this.pisos = pisos;
	}

	public String getNombre() {
		return nombre;
	}

	public void setNombre(String nombre) {
		this.nombre = nombre;
	}

	public void añadirPiso() {
		String direccion;
		int m2;
		double precio;
		boolean venta = false;
		boolean alquiler = false;
		boolean exit = false;
		String select;
		System.out.println("Ha elegido añadir un nuevo piso.");
		System.out.println("Introduzca la direccion:");
		direccion = scan.nextLine();
		do {
			System.out.println("Introduzca el tamaño(m2):");
			m2 = Integer.parseInt(scan.nextLine());
			if (m2 < 0) {
				System.out.println("El tamaño debe ser un numero positivo.");
			} else {
				exit = true;
			}
		} while (exit != true);
		exit = false;
		do {
			System.out.println("Introduzca el precio:");
			precio = scan.nextDouble();
			if (precio < 0) {
				System.out.println("El precio debe ser un numero positivo.");
			} else {
				exit = true;
			}
		} while (exit != true);
		exit = false;
		do {
			System.out.println("Seleccione el tipo de piso \n"
			+ "1/Venta" + "2/Alquiler" + "3/Ambos");
			select = scan.next();
			switch (select) {
			case"1":
				venta = true;
				exit = true;
				break;
			case"2":
				alquiler = true;
				exit = true;
				break;
			case"3":
				venta= true;
				alquiler = true;
				exit = true;
				break;
			default:
				System.out.println("Seleccione una opción válida.");
			}
		}while (exit != true);
		pisos.add(new Piso(direccion, m2, precio, venta, alquiler));
	}

	public void modificarPiso() {
		int id;
		int i;
		boolean exit = false;
		String select;
		System.out.println("Ha elegido modificar un piso.");
		do {
			System.out.println("Introduzca el id del piso a modificar.");
			id = scan.nextInt();
			for (i = 0; i < pisos.size(); i++) {
				if (pisos.get(i).id == id) {
					exit = true;
					break;
				}
				if (i == pisos.size()) {
					System.out.println("No se ha encontrado el id introducido.");
				}
			}
		} while (exit != true);
		exit = false;
		do {
			System.out.println("Seleccione un apartado a modificar:" + "\n1/Direccion" + "\n2/Tamaño" + "\n3/Precio"
			+ "\n4/Venta-Alquiler" + "\n0/Volver al menu principal.");
			select = scan.next();
			switch (select) {
			case "1":
				String direccion;
				System.out.println("Introduzca la nueva direccion:");
				direccion = scan.next();
				pisos.get(i).setDireccion(direccion);
				break;
			case "2":
				int m2;
				boolean exit2 = false;
				do {
					System.out.println("Introduzca el nuevo tamaño:");
					m2 = scan.nextInt();
					if(m2 < 0) {
						System.out.println("El tamaño debe ser positivo");
					} else {
						exit2 = true;
					}
				} while(exit2 != true);	
				pisos.get(i).setM2(m2);
				break;
			case "3":
				double precio;
				boolean exit3 = false;
				do {
					System.out.println("Introduzca el nuevo precio:");
					precio = scan.nextDouble();
					if(precio < 0) {
						System.out.println("El precio debe ser positivo");	
					} else {
						exit3 = true;
					}
				} while(exit3 != true);
				pisos.get(i).setPrecio(precio);
				break;
			case"4":
				boolean venta = false;
				boolean alquiler = false;
				boolean exit4 = false;
				String select2;
				do {
					System.out.println("Introduzca el nuevo tipo de piso:" + "\n1/Venta" + "\n2/Alquiler" + "\n3/Ambos");
					select2 = scan.next();
					switch (select2) {
					case"1":
						venta = true;
						alquiler = false;
						exit4 = true;
						break;
					case"2":
						venta = false;
						alquiler = true;
						exit4 = true;
						break;
					case"3":
						venta = true;
						alquiler = true;
						exit4 = true;
						break;
					default:
						System.out.println("Seleccione una opción válida.");
						exit4 = false;
					}
				} while(exit4 != true);
				pisos.get(i).setVenta(venta);
				pisos.get(i).setAlquiler(alquiler);
				break;
			case "0":
				exit = true;
				break;
			default:
				System.out.println("Seleccione una opción válida.");
			}
		} while (exit != true);
	}
	
	public void listarPisos() {
		for(int i = 0; i < pisos.size(); i++) {
			System.out.println(pisos.get(i).getId() + "\n");
			System.out.println(pisos.get(i).getM2() + "\n");
			System.out.println(pisos.get(i).getPrecio() + "\n");
			System.out.println(pisos.get(i).getAlquiler() + "\n");
			System.out.println(pisos.get(i).getVenta() + "\n");
		}
	}
}