
public class Casa extends Inmueble {

	public boolean jardin;
	public boolean piscina;

	public Casa() {
		super();
		this.jardin = false;
		this.piscina = false;
	}

	public Casa(Direccion direccion,int n_habitaciones, int m2, double precio, boolean garaje, boolean alquiler, boolean venta, boolean jardin, boolean piscina) {
		super(direccion, n_habitaciones, m2, precio, garaje, alquiler, venta);
		this.jardin = jardin;
		this.piscina = piscina;
	}

	public boolean getJardin() {
		return jardin;
	}

	public void setJardin(boolean jardin) {
		this.jardin = jardin;
	}

	public boolean getPiscina() {
		return piscina;
	}

	public void setPiscina(boolean piscina) {
		this.piscina = piscina;
	}

}
