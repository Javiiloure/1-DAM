import java.util.Scanner;

public class Ejercicio7 {

	public static void main(String[] args) {

		int x = 0;
		int fact = 1;
		boolean neg = false;

		Scanner scan = new Scanner(System.in);
		System.out.println("Introduzca un número: ");
		x = scan.nextInt();
		scan.close();

		if (x < 0) {
			neg = true;
		}

		for (int i = x; i > 1; i--) {

			fact = fact * i;
		}

		if(neg == false) {
			System.out.println("El factorial de " + x + " es: " + fact);
		}
		else if (neg == true) {
			System.out.println("No se puede calcular el facorial de un número negativo");
		}
	}
}